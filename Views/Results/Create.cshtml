@model Приложение.Models.Result

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-sm border-0" style="border-radius: 15px;">
                <div class="card-body p-4">
                    <h3 class="mb-4" style="color: #ff8c00; font-weight: bold;">➕ Внести новый результат</h3>
                    <form asp-action="Create">
                        <div class="mb-3">
                            <label class="form-label" style="color: #d35400; font-weight: bold;">Выберите соревнование</label>
                            <select asp-for="CompetitionId" class="form-select form-control-lg" asp-items="ViewBag.CompetitionId" style="background-color: #fdf7f2;"></select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" style="color: #d35400; font-weight: bold;">Выберите участника</label>
                            <select asp-for="ParticipantId" class="form-select form-control-lg" asp-items="ViewBag.ParticipantId" style="background-color: #fdf7f2;"></select>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <label class="form-label" style="color: #d35400; font-weight: bold;">Баллы / Очки</label>
                                <input asp-for="Score" class="form-control" type="number" step="0.01" />
                            </div>
                            <div class="col">
                                <label class="form-label" style="color: #d35400; font-weight: bold;">Занятое место</label>
                                <input asp-for="Rank" class="form-control" type="number" />
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-link text-muted">Отмена</a>
                            <button type="submit" class="btn btn-lg text-white px-5" style="background-color: #ff8c00; font-weight: bold;">Сохранить результат</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>