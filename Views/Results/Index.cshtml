@model IEnumerable<Приложение.Models.Result>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: #e67e22; font-weight: 800;">📊 Результаты соревнований</h2>
        <a asp-action="Create" class="btn btn-lg text-white" style="background-color: #ff8c00; border-radius: 8px; font-weight: bold;">
            + Внести результат
        </a>
    </div>

    <div class="card shadow-sm border-0" style="border-radius: 12px; overflow: hidden; border: 1px solid #eee;">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead style="background-color: #fdf7f2; border-bottom: 2px solid #ff8c00;">
                    <tr>
                        <th class="p-3" style="color: #d35400;">Соревнование</th>
                        <th class="p-3" style="color: #d35400;">Участник</th>
                        <th class="p-3" style="color: #d35400;">Баллы</th>
                        <th class="p-3" style="color: #d35400;">Место</th>
                        <th class="p-3 text-end" style="color: #d35400;">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="vertical-align: middle;">
                            <td class="p-3" style="color: #000; font-weight: 700;">@item.Competition?.Name</td>
                            <td class="p-3" style="color: #000;">@item.Participant?.FullName</td>
                            <td class="p-3" style="color: #000;">@item.Score</td>
                            <td class="p-3"><span class="badge bg-warning text-dark">@item.Rank</span></td>
                            <td class="p-3 text-end">
                                <div class="btn-group border shadow-sm" style="border-radius: 4px; overflow: hidden;">

                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-white btn-sm px-3"
                                       style="color: #ffc107; border-right: 1px solid #eee; font-weight: 600;">
                                        Редактировать
                                    </a>

                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-white btn-sm px-3"
                                       style="color: #17a2b8; border-right: 1px solid #eee; font-weight: 600;">
                                        Инфо
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-white btn-sm px-3"
                                       style="color: #dc3545; font-weight: 600;"
                                       onclick="return confirm('Удалить этот результат?')">
                                        Удалить
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* Стили для кнопок, чтобы они были белыми внутри группы */
    .btn-white {
        background-color: #fff;
        border: none;
    }

        .btn-white:hover {
            background-color: #f8f9fa;
        }
</style>