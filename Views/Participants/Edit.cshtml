@model Приложение.Models.Participant

@{
    ViewData["Title"] = "Редактирование участника";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">✏️ Редактировать данные участника</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="control-label font-weight-bold">ФИО участника</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="BirthDate" class="control-label font-weight-bold">Дата рождения</label>
                            <input asp-for="BirthDate" type="date" class="form-control" />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="TeamName" class="control-label font-weight-bold">Команда / Организация</label>
                            <input asp-for="TeamName" class="form-control" />
                            <span asp-validation-for="TeamName" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">💾 Сохранить изменения</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">↩ Отмена</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}